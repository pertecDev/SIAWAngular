{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "es2022",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "ES2022", // Cambiado a ES2022
        "skipLibCheck": true,
        "lib": ["es2020", "es2019", "es2018", "dom", "ES2021.String"],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths": {
            "path": ["../node_modules/path-browserify"],
            "os": ["../node_modules/os-browserify/browser"],
            "fs": ["../node_modules/fs-web"],
            "@components/*": ["app/components/*"],
            "@guards/*": ["app/guards/*"],
            "@modules/*": ["app/modules/*"],
            "@pages/*": ["app/pages/*"],
            "@services/*": ["app/services/*"],
            "@/*": ["app/*"]
        },
        "useDefineForClassFields": true // Asegúrate de que esté configurado a true
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
